/**index.wxss**/

.outbox {
  background-color: #fff;
}

.view_box {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background-color: #000;
}

image {
  width: 100%;
  height: 100%;
  position: absolute;
}

.copy {
  position: absolute;
  left: 0;
  top: 120rpx;
  width: 90%;
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-family: '微软雅黑';
}

.copy_text {
  position: absolute;
  font-size: 26rpx;
  color: #fff;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  width: 100%;
  text-align: center;
  bottom: 10rpx;
}

/*故事  */

.story_icon {
  width: 8vw;
  height: 8vw;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 255, 255, .7)
}
.story_box{
  max-width: 45vw;
  position: absolute;
  font-size: 26rpx;
  line-height: 6vw;
  color:#fff;
  background-color: rgba(0, 0, 0, .7);
  padding: 1vw 2vw;
  border: 1px solid rgba(255, 255, 255, .5);
  z-index:2;
}

/*设置  */

.settings {
  width: 10vw;
  height: 10vw;
  font-size: 6vw;
  line-height: 10vw;
  text-align: center;
  color: #ccc;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .4);
  position: absolute;
  z-index: 10;
  right: 8vw;
  bottom: 8vw;
}
