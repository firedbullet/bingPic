/* pages/settings/settings.wxss */
.bg{
	position:absolute;
	width: 100%;
    height: 100vh;
}
.navbar {
    background-color: rgba(0, 0, 0, 0.8);
    height: 10vh;
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
}
.goback{
	position: absolute;
	color: #fff;
    font-size: 28rpx;
	left: 5vw;
	bottom: 2vh;
}
.title {
	position: absolute;
	bottom: 2vh;
    color: #fff;
    font-size: 28rpx;
}

.content {
	background-color: rgba(0, 0, 0, 0.7);
    text-align: center;
    height: 90vh;
    overflow: scroll;
	position: relative;
	color:#d3d3d3;
}

.settings_box {
    margin: 2vw 0 4vw;
}

.swich_text {
    display: inline-block;
    font-size: 30rpx;
}

/*选择分辨率  */

.picker_title {
    display: inline-block;
    padding: 10px 20px;
    border-bottom: 1px solid #0f9154;
    font-size: 30rpx;
    margin-top: 4vw;
}

.picker_box {
    display: inline-block;
	font-weight: bold;
	text-shadow: #0f9154
}

.picker_item {
    font-size: 26rpx;
    padding: 2vw 6vw;
}

.about_item {
    font-size: 26rpx;
    padding: 1.5vw 8vw;
}
